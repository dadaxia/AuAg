<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gold.cn.dao.AgCNYDao">

    <insert id="insert" parameterType="com.gold.cn.model.AuCNY" useGeneratedKeys="true" keyProperty="id" >
        insert into t_agcny
              (id,code,highPrice,lowPrice,nowPrice,changePoint,changeRate,openPrice,yesterdayClosePrice,time)
        values
              (#{id},#{code},#{highPrice},#{lowPrice},#{nowPrice},#{changePoint},#{changeRate},#{openPrice},#{yesterdayClosePrice},#{time})
    </insert>

