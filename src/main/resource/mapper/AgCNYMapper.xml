    <select id="getByTimeInterval" resultType="com.gold.cn.model.AuCNY">
        select * from t_agcny where time between #{startTime} and #{endTime}
    </select>

    <select id="getByTime" parameterType="String" resultType="com.gold.cn.model.AuCNY">
        select * from t_agcny where time = #{time}
    </select>

    <select id="getRecentDayAu" resultType="com.gold.cn.model.AuCNY">
       SELECT * FROM t_agcny ORDER BY time DESC limit 86400
    </select>

    <select id="getLatestAgCNYData" parameterType="java.sql.Timestamp" resultType="com.gold.cn.model.AgCNY">
       SELECT * FROM t_agcny where time >= #{timestamp} order by time asc
    </select>

    <delete id="deleteByTime" parameterType="String">
        delete from t_agcny where time = #{time}
    </delete>


</mapper>